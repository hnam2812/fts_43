<li>
  <%= f.object.question.content %>
</li>
<ol type="a">
  <% case f.object.question.question_type %>
  <% when Settings.questions.type.single %>
    <% f.object.question.answers.each do |answer| %>
      <%= f.radio_button :content_answer, answer.id,
        {checked: f.object.content_answer.include?(answer.id.to_s),
        multiple: true, disabled: true, class: "radio_answer"} %>
      <%= answer.content %><br/>
    <% end %>
  <% when Settings.questions.type.multiple %>
    <% f.object.question.answers.each do |answer| %>
      <%= f.check_box :content_answer,
        {checked: f.object.content_answer.include?(answer.id.to_s),
        multiple: true, disabled: true, class: "radio_answer"}, answer.id, false %>
      <%= answer.content %><br/>
    <% end %>
  <% when Settings.questions.type.text %>
    <%= f.text_field :content_answer, {multiple: true, disabled: true} %>
  <% end %>
</ol>
<div class="checkbox">
  <label>
    <%= f.check_box :is_correct %> <%= t "admin.exam.is_correct" %>
  </label>
</div>
