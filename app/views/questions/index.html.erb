<h2><%= t "questions.show" %></h2>
<table class="table">
  <thead>
    <tr>
      <th><%= t "questions.content" %></th>
      <th><%= t "questions.subject" %></th>
      <th><%= t "questions.status" %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @questions %>
  </tbody>
</table>
<div>
  <%= link_to t("questions.new"), new_user_question_path(current_user),
    class: "btn btn-success" %>
</div>
